    <div class="floating-hearts" id="hearts-container"></div>
    
    <div class="container">
        <h1>Happy Birthday Vaishu&nbsp;<span class="heart">❤️</span></h1>
        <div class="subtitle">Demo: Redirecting to your special surprise!</div>
        
        <div class="countdown" id="countdown">
            <div class="countdown-item">
                <div class="countdown-value" id="seconds">5</div>
                <div class="countdown-label">Seconds</div>
            </div>
        </div>
        
        <div class="age">Your 21st birthday surprise awaits!</div>
        
        <div class="message">
            Get ready for something special...
        </div>
    </div>
    
    <!-- Demo Indicator -->
    <div class="demo-indicator">
        <i class="fas fa-play"></i> Demo Mode
    </div>
    
    <!-- Audio Element -->
    <audio id="birthdayMusic" autoplay loop>
        <source src="birthday-song.mp3" type="audio/mpeg">
        Your browser does not support the audio element.
    </audio>

    <script>
        // Create floating hearts
        function createHeart() {
            const heart = document.createElement('div');
            heart.classList.add('heart-float');
            heart.innerHTML = '❤️';
            heart.style.left = Math.random() * 100 + '%';
            heart.style.fontSize = Math.random() * 20 + 10 + 'px';
            heart.style.animationDuration = Math.random() * 3 + 5 + 's';
            document.getElementById('hearts-container').appendChild(heart);
            
            setTimeout(() => {
                heart.remove();
            }, 8000);
        }
        
        setInterval(createHeart, 800);
        
        // Handle autoplay restrictions
        document.addEventListener('DOMContentLoaded', function() {
            const audio = document.getElementById('birthdayMusic');
            
            // Try to play audio
            const playPromise = audio.play();
            
            if (playPromise !== undefined) {
                playPromise.then(_ => {
                    // Autoplay started successfully
                    console.log("Autoplay started");
                })
                .catch(error => {
                    // Autoplay was prevented
                    console.log("Autoplay prevented:", error);
                    
                    // Show a message that user needs to interact
                    const message = document.createElement('div');
                    message.style.position = 'fixed';
                    message.style.bottom = '80px';
                    message.style.left = '50%';
                    message.style.transform = 'translateX(-50%)';
                    message.style.backgroundColor = 'rgba(233, 30, 99, 0.9)';
                    message.style.color = 'white';
                    message.style.padding = '12px 20px';
                    message.style.borderRadius = '30px';
                    message.style.textAlign = 'center';
                    message.style.zIndex = '1001';
                    message.style.maxWidth = '80%';
                    message.innerHTML = '<i class="fas fa-info-circle"></i> Click anywhere to enable birthday music';
                    document.body.appendChild(message);
                    
                    // Set up click event to start audio
                    function enableAudio() {
                        audio.play().then(() => {
                            message.remove();
                            document.removeEventListener('click', enableAudio);
                            document.removeEventListener('touchstart', enableAudio);
                        }).catch(e => {
                            console.log("Play failed after interaction:", e);
                        });
                    }
                    
                    // Add event listeners for user interaction
                    document.addEventListener('click', enableAudio);
                    document.addEventListener('touchstart', enableAudio);
                });
            }
        });
        
        // Demo countdown functionality
        let secondsLeft = 5;
        
        function updateDemoCountdown() {
            // Update the seconds display
            document.getElementById('seconds').textContent = secondsLeft.toString().padStart(2, '0');
            
            // When countdown reaches zero, redirect to gallery
            if (secondsLeft <= 0) {
                // Show redirecting message
                document.querySelector('.message').innerHTML = '<i class="fas fa-spinner fa-spin"></i> Redirecting to your surprise...';
                
                // Redirect to gallery page after a brief moment
                setTimeout(() => {
                    window.location.href = 'gallery.html';
                }, 500);
                
                return;
            }
            
            // Decrement the seconds
            secondsLeft--;
        }
        
        // Initial call and set interval
        updateDemoCountdown();
        setInterval(updateDemoCountdown, 1000);
    </script>

</body>
</html>
